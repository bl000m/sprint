<div class="project-form-container">
  <h1><%= project.name.capitalize %></h1>
  <div class="new-project-form-wrapper">

    <%= simple_form_for(project) do |f| %>
      <div class="display-none">
        <%= f.input :name, as: :hidden %>
        <%= f.input :trello_board_id, as: :hidden %>
      </div>
      <div class="form-input">
        <p>Select your TO DO list</p>
        <%= f.select :trello_list_id, trello_lists.map {|v| [v['name'], v['id']]} %>
      </div>

      <div class="form-input">
        <p>Select your DONE list</p>
        <%= f.select :trello_done_list_id, trello_lists.map {|v| [v['name'], v['id']]} %>
      </div>

      <div class="form-input">
        <p>Select a field</p>
        <%= f.select :trello_field_estimated_time_id, trello_custom_fields.map {|v| [v['name'], v['id']]} %>
      </div>

      <div class="project-form-btn">
        <%= f.submit %>
      </div>
    <% end %>

  </div>
</div>
